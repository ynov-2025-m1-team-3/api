{
  "name": "api",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build index.ts --outdir=dist --target bun --format esm --minify",
    "dev": "bun --watch index.ts",
    "typecheck": "bun run --type-check",
    "start": "bun dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "postinstall": "bunx prisma generate"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@prisma/client": "6.7.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.24.0",
    "fastify": "^5.3.0",
    "fastify-plugin": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.5.3",
    "prisma": "6.7.0"
  }
}
